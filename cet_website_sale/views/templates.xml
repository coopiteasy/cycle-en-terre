<odoo>

  <template id="remove_top_pager"
    inherit_id="website_sale.products"
    name="Remove Top Pager and All It's Content"
    active="True"
    customize_show="True">
    <xpath expr="(//div[hasclass('oe_website_sale')]
                  //div[hasclass('products_pager')])[1]" position="replace">
      <div class="products_pager"></div>
    </xpath>
  </template>


  <template id="search_reset_filter"
    inherit_id="website_sale.search"
    name="Search Reset Category and Months Filters"
    active="True"
    customize_show="True">
    <xpath expr="//form" position="attributes">
      <attribute name="t-att-action">
        keep('/shop', search=0)
      </attribute>
    </xpath>
  </template>


  <template id="big_banner_top"
    inherit_id="website_sale.products"
    name="Cycle en Terre Big Banner Top"
    active="True"
    customize_show="True">
    <xpath expr="//div[hasclass('oe_website_sale')]" position="before">
      <div class="big-banner-top">
        <div class="container">
          <t t-call="website_sale_category_megamenu.categories_megamenu"/>
          <t t-call="website_sale_product_seeds.seedling_months">
            <t t-set="sm_class" t-value="'oe_seedling_month_menu row nav nav-pills'"/>
          </t>
        </div>
      </div>
    </xpath>
  </template>

  <template id="product_category_megamenu"
    inherit_id="website_sale.product"
    name="Category Mega-menu on Top"
    active="True"
    customize_show="True">
    <xpath expr="//div[hasclass('js_sale')]" position="before">
      <div class="container">
        <t t-call="website_sale_category_megamenu.categories_megamenu"/>
      </div>
    </xpath>
  </template>

  <template id="cet_website_sale_cart_lines" inherit_id="website_sale.cart_lines" name="Shopping Cart Lines">
    <xpath expr="//div[hasclass('js_cart_lines')]" position="after">
      <t t-if='website_sale_order'>
        <div t-if='website_sale_order._get_customer_type_warning(clear=False)' class="alert alert-warning">
          <strong>Warning!</strong> <t t-esc='website_sale_order._get_customer_type_warning()'/>
        </div>
        <div t-if='website_sale_order._get_threshold_warning(clear=False)' class="alert alert-warning">
          <strong>Warning!</strong> <t t-esc='website_sale_order._get_threshold_warning()'/>
        </div>
      </t>
    </xpath>
  </template>

  <template id="cet_website_sale_payment" inherit_id="website_sale.payment">
    <xpath expr="//table[@id='cart_products']" position="after">
      <t t-if='website_sale_order'>
        <t t-set='warning_threshold' t-value='website_sale_order._get_threshold_warning(clear=False)' />
        <t t-set='warning_customer_type' t-value='website_sale_order._get_customer_type_warning(clear=False)' />
        <div t-if='warning_threshold' class="alert alert-warning">
          <strong>Warning!</strong> <t t-esc='website_sale_order._get_threshold_warning()'/>
        </div>
        <div t-if='warning_customer_type' class="alert alert-warning">
          <strong>Warning!</strong> <t t-esc='website_sale_order._get_customer_type_warning()'/>
        </div>
      </t>
    </xpath>
  </template>

</odoo>
