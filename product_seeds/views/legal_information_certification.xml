<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="certification_view_form" model="ir.ui.view">
        <field name="name">legal.information.certification.form</field>
        <field name="model">legal.information.certification</field>
        <field name="arch" type="xml">
            <form string="Certification">
                <group>
                    <field name="name"/>
                    <field name="product_ids" widget="many2many_tags"/>
                </group>
            </form>
        </field>
    </record>

    <record id="certification_view_tree" model="ir.ui.view">
        <field name="name">legal.information.certification.tree</field>
        <field name="model">legal.information.certification</field>
        <field name="arch" type="xml">
            <tree string="Certification">
                <field name="name"/>
                <field name="product_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="action_certification_form" model="ir.actions.act_window">
        <field name="name">Certification</field>
        <field name="res_model">legal.information.certification</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
            action="action_certification_form"
            id="menu_action_certification_form"
            parent="menu_legal_information_parent"
            sequence="10"
    />
</odoo>
